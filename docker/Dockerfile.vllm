FROM nvidia/cuda:12.4.1-runtime-ubuntu22.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y git python3-pip && rm -rf /var/lib/apt/lists/*
RUN pip install --no-cache-dir vllm torch --extra-index-url https://download.pytorch.org/whl/cu124
WORKDIR /workspace

CMD ["python", "-m", "vllm.entrypoints.openai.api_server", "--model", "codellama/CodeLlama-7b-hf", "--dtype", "bfloat16", "--port", "8000"]
